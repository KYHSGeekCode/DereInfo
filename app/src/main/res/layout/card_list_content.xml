<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후타바 안즈"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_vo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_vo_value"
                app:layout_constraintStart_toEndOf="@id/card_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_vo_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_da_label"
                app:layout_constraintStart_toEndOf="@id/card_vo_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_da_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_da_value"
                app:layout_constraintStart_toEndOf="@id/card_vo_value"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_da_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_vi_label"
                app:layout_constraintStart_toEndOf="@id/card_da_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_vi_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_vi_value"
                app:layout_constraintStart_toEndOf="@id/card_da_value"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_vi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_vi_label"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_card_leaderskill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브릴리언듯(40%)" />

        <TextView
            android:id="@+id/tv_card_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10초마다 40%확률로 스코어 50퍼넨트 업이다." />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stats"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />
</androidx.constraintlayout.widget.ConstraintLayout>